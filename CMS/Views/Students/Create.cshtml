@model CMS.Models.ViewModels.Student

@{
    ViewData["Title"] = "Create student";
}
<!-- JCrop -->
<link href="@Url.Content("~/tapmodo-Jcrop-1902fbc/css/jquery.Jcrop.css")" rel="stylesheet" />
<!-- bootstrap-fileinput -->
<link href="@Url.Content("~/bootstrap-fileinput/css/fileinput.css")" rel="stylesheet" />

<p align="center" style="font-size:50px;">Create students info</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data" id="form1" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="studentAdmin" id="studentAdmin" class="control-label"></label>
                <input asp-for="studentAdmin"  id="studentAdminval" class="form-control" />
                <span type="text" asp-validation-for="studentAdmin" id="studentAdminerr"  class="text-danger" >@ViewBag.error</span>
            </div>
            <div class="form-group">
                <label asp-for="studentName" id="studentName" class="control-label"></label>
                <input asp-for="studentName" id="studentNameval" class="form-control" />
                <span asp-validation-for="studentName" id="studentNameerr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="projectId" id="projectId" class="control-label"></label>
                <select asp-for="projectId" id="projectIdval" class="form-control" asp-items="ViewBag.projectselect">
                    <option id="0" value="0">If have project please select project</option>
                </select>
                <span asp-validation-for="projectId" id="projectIderr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="studentYear" id="studentYear" class="control-label"></label>
                <input asp-for="studentYear" id="studentYearval" class="form-control" />
                <span asp-validation-for="studentYear" id="studentYearerr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Student Photo</label>
                <img id="show-img" class="thumbnail" src="~/tapmodo-Jcrop-1902fbc/demos/demo_files/sago.jpg" style="width:150px;height:150px;">

                <button class="btn btn-primary" data-toggle="modal" data-target="#myModal" type="button">上传头像</button>
                <input type="file" name="imagefile" id="imagefile" class="form-control"  />
                <span class="text-danger"></span>
            </div>
            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="min-width:1500px">
                <div class="modal-dialog" style="min-width:1500px">
                    <div class="modal-content" style="">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>

                        </div>
                        <div class="modal-body ">
                            <h4 class="modal-title" id="myModalLabel">图片上传</h4>
                            <div class="row">
                                <div class="col-md-6">
                                    <img id="cut-img" class="thumbnail" src="~/tapmodo-Jcrop-1902fbc/demos/demo_files/sago.jpg"><br />
                                </div>
                                <div class="col-md-5">

                                    <input type="file" name="txt_file" id="txt_file" multiple class="file-loading" /><br />
                                    <h4>图片说明：</h4>
                                    <p>1、图片格式需要jpg、gif、png为后缀名.</p>
                                    <p>2、图片可以在线裁剪大小,以裁剪后为最终结果.</p>
                                    <p>3、图片上传完毕即可关闭窗口.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <input type="text" id="tailor" name="tailor" />
            <div class="form-group">
                <input type="button" onclick="check()" value="Create" class="btn btn-info" id="create" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section scripts{
    <script src="@Url.Content("~/tapmodo-Jcrop-1902fbc/js/jquery.Jcrop.js")"></script>
