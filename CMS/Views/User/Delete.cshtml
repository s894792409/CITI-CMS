@model CMS.Models.ViewModels.UserInfo

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div class="card border-dark mb-3" style="max-width: 18rem;">
    <div class="card-header">Theme</div>
    <div class="card-body">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.UserName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.NormalizedEmail)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NormalizedEmail)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Admin)
            </dt>
            <dd>
                @{
                        string role = "";
                        if (Model.Admin)
                        {
                            role = "Admin";
                        }
                        else
                        {
                            role = "User";
                        }
                    }
                    @Html.DisplayFor(modelItem => role)
                
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="UserName" />
            <input type="submit" value="Delete" class="btn btn-outline-danger" />
            <a asp-action="AllUser" class="btn btn-outline-info">Back to List</a>

        </form>
        <h1 class="text-danger">@ViewBag.error</h1>
    </div>
    </div>