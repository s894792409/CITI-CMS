@model CMS.Models.ViewModels.Theme

@{
    ViewData["Title"] = "Create theme";
    ViewData["Controller"] = "Theme";
}

<br /><p align="center" style="font-size:50px;" >Create themes</p>
<hr />
<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="themeName" class="control-label"></label>
                <input asp-for="themeName" class="form-control" />
                <span asp-validation-for="themeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="backgroundColor" class="control-label"></label>
                <input asp-for="backgroundColor" class="form-control" />
                <span asp-validation-for="backgroundColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fontStyle" class="control-label"></label>
                <input asp-for="fontStyle" class="form-control" />
                <span asp-validation-for="fontStyle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-info align-self-center" />
                <a asp-action="Index" class="btn btn-outline-info" style="margin:15px;">Back to List</a>
            </div>
        </form>
    </div>
</div>
