@model CMS.Models.ViewModels.Theme

@{
    ViewData["Title"] = "Delete theme";
}

<br /><p align="center" style="font-size:50px;">Delete themes</p>
      <hr />
<h3>Are you sure you want to delete this?</h3>
<br /><br /><div class="justify-content-center d-flex">
    <div class="card border-dark mb-3" style="width: 23rem;border:1px solid #808080;">
        <div class="card-header" align="center">Theme</div>
        <div class="card-body justify-content-center d-flex">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.themeName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.themeName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.backgroundColor)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.backgroundColor)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.fontStyle)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.fontStyle)
                </dd>
            </dl>
        </div>
        <div class=" justify-content-center d-flex">
            <form asp-action="Delete">
                <input type="hidden" asp-for="themeId" />
                <input type="submit" value="Delete" class="btn btn-outline-danger" />
                <a asp-action="Index" class="btn btn-outline-info">Back to List</a>
                <p class="text-danger">@ViewBag.error</p>
            </form>
        </div>
    </div>
</div>
