@model IEnumerable<CMS.Models.ViewModels.Theme>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.themeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.backgroundColor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fontStyle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateCreated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.themeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.backgroundColor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fontStyle)
            </td>
            <td>
                @using System.Globalization;
                @{
                    string datecreated = item.dateCreated.ToString("dd MMM yyyy,hh:mm", DateTimeFormatInfo.InvariantInfo);
                }
                @Html.DisplayFor(modelItem => datecreated)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.themeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.themeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.themeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
