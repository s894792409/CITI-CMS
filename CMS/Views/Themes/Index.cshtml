@model IEnumerable<CMS.Models.ViewModels.Theme>

@{
    //ViewData["Title"] = "Index";
}


<p align="center" style="font-size:50px;margin-top:50px;" class="title">All themes</p>
<p align="center">
    <a class="h1NewPage" asp-action="Create">Create New</a>
</p>
<table class="table table-striped">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.themeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.backgroundColor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fontStyle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateCreated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="line-height:40px;">
                    @Html.DisplayFor(modelItem => item.themeName)
                </td>
                <td style="line-height:40px;">
                    @Html.DisplayFor(modelItem => item.backgroundColor)
                </td>
                <td style="line-height:40px;">
                    @Html.DisplayFor(modelItem => item.fontStyle)
                </td>
                <td style="line-height:40px;">
                    @using System.Globalization;
                    @{
                        string datecreated = item.dateCreated.ToString("dd MMM yyyy,hh:mm", DateTimeFormatInfo.InvariantInfo);
                    }
                    @Html.DisplayFor(modelItem => datecreated)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.themeId" class="btn btn-primary">Edit</a>
                    @* <a asp-action="Details" asp-route-id="@item.themeId" class="btn btn-info">Details</a>*@
                    <a asp-action="Delete" asp-route-id="@item.themeId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
