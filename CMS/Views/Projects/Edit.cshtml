@model CMS.Models.ViewModels.Projects

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Projects</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="projectId" />
            <div class="form-group">
                <label asp-for="projectName" class="control-label"></label>
                <input asp-for="projectName" class="form-control" />
                <span asp-validation-for="projectName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="projectState" class="control-label"></label>
                <input asp-for="projectState" class="form-control" />
                <span asp-validation-for="projectState" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="noOfStudents" class="control-label"></label>
                <input asp-for="noOfStudents" class="form-control" />
                <span asp-validation-for="noOfStudents" class="text-danger"></span>
            </div>
            <input asp-for="dateCreated" class="form-control" style="display: none;" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

